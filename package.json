{
    "private": true,
    "workspaces": ["src/*"],
    "scripts": {
        "rollup": "rollup -c",
        "test": "jest",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook -o docs-build",
        "lint": "npm-run-all -l lint:eslint",
        "lint:ci": "eslint src/**/*.{js,jsx} -f checkstyle -o target/checkstyle-result.xml",
        "lint:fix": "npm-run-all -l lint:prettier-fix lint:eslint-fix",
        "lint:eslint": "eslint src/**/*{.ts,.tsx}",
        "lint:prettier": "prettier --check src/**/*{.ts,.tsx,.js,.jsx,.css,.md}",
        "lint:eslint-fix": "eslint --fix 'src/**/*{.ts,.tsx}'",
        "lint:prettier-fix": "prettier --write src/**/*{.ts,.tsx,.js,.jsx,.css,.md}"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5"
    },
    "devDependencies": {
        "@chakra-ui/storybook-addon": "^4.0.4",
        "@chakra-ui/react": "^1.7.3",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-storybook": "^0.6.3",
        "framer-motion": "^6",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^28.1.1",
        "jest-environment-jsdom": "^28.1.1",
        "prettier": "2.7.1",
        "rollup": "^2.75.7",
        "rollup-plugin-dts": "^4.2.2",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-terser": "^7.0.2",
        "tslib": "^2.4.0",
        "typescript": "^4.7.4"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "transformIgnorePatterns": [
        "node_modules/util-deprecate"
        ],
        "moduleDirectories": [
        "node_modules",
        "src"
        ],
        "moduleNameMapper": {
        "\\.(css|less|sass|scss)$": "identity-obj-proxy",
        "@fontsource/lato": "identity-obj-proxy"
        }
    }
}
